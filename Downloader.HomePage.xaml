<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Spacing="12">
        <TextBlock Text="在下方的输入框里面输入歌曲ID" HorizontalAlignment="Center" FontSize="24"/>

        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
            <ComboBox SelectionChanged="LevelChanged" x:Name="LevelSelect" PlaceholderText="请选择音质" HorizontalAlignment="Center">
            </ComboBox>
            <TextBox x:Name="InputBox" HorizontalAlignment="Center" PlaceholderText="请输入文本..."
                     Height="24" Width="400"/>
            <Button Content="开始解析" Click="OnDownloadButtonClick"/>
        </StackPanel>
        <StackPanel x:Name="InfoContent" Orientation="Vertical" HorizontalAlignment="Center" Spacing="12">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition IsStaggeringEnabled="True"/>
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>
        </StackPanel>
    </StackPanel>
</Page>